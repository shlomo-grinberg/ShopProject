@model Shop.Models.Product

@{
    ViewData["Title"] = "Edit";
}



<div class="container">
    <div class="row">
        <div class="col-sm">
        </div>
        <div class="col-sm bg-light text-danger" style="opacity:0.85; font-weight:bold; margin:10px;">
            <h3 style="text-align:center;">ערוך מוצר</h3>

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label" style="float:right">שם</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Desc" class="control-label" style="float:right">תיאור המוצר</label>
                    <textarea asp-for="Desc" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Desc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label" style="float:right">מחיר</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImgURL" class="control-label" style="float:right">נתיב של התמונה</label>
                    <input asp-for="ImgURL" class="form-control" />
                    <span asp-validation-for="ImgURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="שמור" class="btn btn-primary" />
                </div>
            </form>


            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
        <div class="col-sm">
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
